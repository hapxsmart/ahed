<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Aheadworks_Sarp2::css/style.css"/>
    </head>
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Aheadworks\Sarp2\Block\Adminhtml\Page\Menu" name="aw_sarp2_menu">
                <block class="Aheadworks\Sarp2\Block\Adminhtml\Page\Menu\Item" name="aw_sarp2_menu_item.plans">
                    <arguments>
                        <argument name="path" xsi:type="string">*/plan/index</argument>
                        <argument name="label" xsi:type="string">Plans</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_Sarp2::plans</argument>
                        <argument name="controller" xsi:type="string">plan</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Sarp2\Block\Adminhtml\Page\Menu\Item" name="aw_sarp2_menu_item.subscriptions">
                    <arguments>
                        <argument name="path" xsi:type="string">*/subscription/index</argument>
                        <argument name="label" xsi:type="string">Subscriptions</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_Sarp2::subscriptions</argument>
                        <argument name="controller" xsi:type="string">subscription</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Sarp2\Block\Adminhtml\Page\Menu\Item" name="aw_sarp2_menu_item.settings">
                    <arguments>
                        <argument name="path" xsi:type="string">adminhtml/system_config/edit/section/aw_sarp2</argument>
                        <argument name="label" xsi:type="string">Settings</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_Sarp2::config_aw_sarp</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Sarp2\Block\Adminhtml\Page\Menu\Item" name="aw_sarp2_menu_item.readme">
                    <arguments>
                        <argument name="label" xsi:type="string">Readme</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">https://aheadworks.com/resources/subscriptions-and-recurring-payments/user-manual-subscriptions-and-recurring-payments</item>
                            <item name="target" xsi:type="string">_blank</item>
                            <item name="class" xsi:type="string">separator</item>
                        </argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Sarp2\Block\Adminhtml\Page\Menu\Item" name="aw_sarp2_menu_item.support">
                    <arguments>
                        <argument name="label" xsi:type="string">Get Support</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">https://aheadworks.com/contact</item>
                            <item name="target" xsi:type="string">_blank</item>
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
